;---------------------------------------------------------------------------
; Jump Start
[Statedef 40] ;jumpsquat
type    = A
physics = S
anim = 40
ctrl = 0
sprpriority = 1
facep2 = 1

[state 40, Vulnerability]
type = hitby
trigger1 = 1
value = SCA, NA, SA, HA, NP, SP, HP; not hit by throws

[State 40, 1]
type = VarSet
trigger1 = Time = 0
sysvar(1) = 0

[State 40, 2]
type = VarSet
trigger1 = command = "holdfwd"
sysvar(1) = 1

[State 40, 3]
type = VarSet
trigger1 = command = "holdback"
sysvar(1) = -1

[State 40, 4];FWD jump
type = VelSet
triggerall = sysvar(1) = 1
trigger1 = animtime = 0
x = const(velocity.jump.fwd.x) + (vel x * 0.65)
y = const(velocity.jump.y)

[State 40, 4] ;Neutral Jump
type = VelSet
triggerall = sysvar(1) = 0
trigger1 = animtime = 0
x = const(velocity.jump.neu.x) + (vel x * 0.05)
y = const(velocity.jump.y)

[State 40, 4] ;Backward Jump
type = VelSet
triggerall = sysvar(1) = -1
trigger1 = animtime = 0
x = const(velocity.jump.back.x) + (vel x * 0.65)
y = const(velocity.jump.y)

[State 40, 6]
type = ChangeState
trigger1 = AnimTime = 0
value = 50
ctrl = 1

